
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    @*<link href="css/bootstrap/bootstrap.min.css" rel="stylesheet" />*@
   
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="css/Login.css" rel="stylesheet" />
    @*<link href="MOTORED2.Client.styles.css" rel="stylesheet" />*@
   @* <link href="Views/Inicio/Registrarse.css" rel="stylesheet" />*@
</head>
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Motored</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Correo</label><br>
                                <input type="text"  required name="correo" id="correo" class="form-control" placeholder="Correo">
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Contraseña</label><br>
                                <input type="password" required name="clave" id="clave" class="form-control" placeholder="Contraseña">
                            </div>

                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger" role="alert">

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿No tienes una cuenta? <a href="@Url.Action("Mapa","Mapa")"> Registraste!</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />

    <br />
    <br />
    <br />
    <footer>
        <p> Motored &copy;. Todos los derechos reservados</p>
    </footer>
</body>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</html>
